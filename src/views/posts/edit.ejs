    <% layout("layout/boilerplate") %>

    <h1>Edit your post</h1>
    
    <div>
        <ul>
            <li><a href="/posts/<%= post._id %>">Show Selected Post</a></li>
            <li><a href="/posts">Goto Gallery</a></li>
        </ul>  
    </div>
    <div>
        <form action="/posts/<%= post._id %>?_method=PUT" method="post"><br>
            <label for="description">Describe pic</label><br>
            <input type="text" id="description" name="post[description]" value="<%= post.description %>" required ><br>
            <label for="caption">Caption Your Post</label><br>
            <input type="text" id="caption" name="post[caption]" value="<%= post.caption %>" required ><br>
            <label for="image">Insert image URL</label><br>
            <input type="text" id="image" name="post[image]" value="<%= post.image %>" required ><br>
            <input type="submit" value="Edit post">

            <label for="likes">how many likes (beta)</label><br>
            <input type="text" id="likes" name="post[likes]" required><br>


        </form>

    </div>